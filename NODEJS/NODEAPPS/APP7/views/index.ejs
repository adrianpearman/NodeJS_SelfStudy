<!-- THIS BUILT USING AN OUTDATED VERSION OF ANGULAR -->

<html ng-app="TestApp">
  <head>
    <meta charset="utf-8">
    <title>The MEAN Stack</title>
    <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.js'></script>
  </head>
  <body ng-controller="MainController as vm">
    <!-- the second script tag is placed seperate from the script tag calling the angular code to allow the angular documentation to be loaded before having the body script tags to be run. -->
    <input type="text" ng-model = "vm.message"/>
    <br>
    {{ vm.message }}
    <br>
    <input type="text" ng-model = "vm.newmessage">
    <br>
    {{ vm.newmessage}}
    <br>
    <ul>
      <li ng-repeat='person in vm.people'>
      {{ person.name }}
      </li>
    </ul>
    <script src="/assets/js/app.js"></script>
  </body>
</html>
